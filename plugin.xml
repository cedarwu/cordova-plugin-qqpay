<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-qqpay" version="1.0.0"
    xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <name>cordova-plugin-qqpay</name>
    <author>cedarwu</author>
    <description>A cordova plugin of QQPay</description>
    <preference name="QQAPPID" />

    <js-module name="QQPay" src="www/qqpay.js">
        <clobbers target="QQPay" />
    </js-module>

    <platform name="android">
        <hook type="after_plugin_add" src="scripts/android-install.js"/>
        <hook type="after_plugin_install" src="scripts/android-install.js"/>
        <hook type="before_plugin_rm" src="scripts/android-install.js"/>
        <hook type="before_plugin_uninstall" src="scripts/android-install.js"/>

        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="QQPay">
                <param name="android-package" value="cedar.cordova.qqpay" />
            </feature>
            <preference name="QQAPPID" value="$QQAPPID"/>
        </config-file>

        <config-file target="AndroidManifest.xml" parent="/*" />

        <config-file target="AndroidManifest.xml" parent="/manifest/application">
            <activity android:name=".qqpay.CallbackActivity" android:label="@string/launcher_name" android:exported="true" android:launchMode="singleTop">
                <intent-filter>
                    <action android:name="android.intent.action.VIEW"/>
                    <category android:name="android.intent.category.DEFAULT"/>
                    <data android:scheme="qwallet$QPAYAPPID"/>
                </intent-filter>
            </activity>
        </config-file>

        <source-file src="src/android/qqpay.java" target-dir="src/cedar/cordova/qqpay" />
        <source-file src="src/android/callback-activity.java" target-dir="src/cedar/cordova/qqpay" />
        <source-file src="src/android/libs/mqqopenpay.jar" target-dir="libs" />
    </platform>

    <platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="QQPay">
                <param name="ios-package" value="QQPay" onload="true" />
            </feature>
            <preference name="QQAPPID" value="$QQAPPID"/>
        </config-file>

        <config-file target="*-Info.plist" parent="LSApplicationQueriesSchemes">
            <array>
                <string>mqqwallet</string>
            </array>
        </config-file>

        <config-file target="*-Info.plist" parent="NSAppTransportSecurity">
            <dict>
                <key>NSAllowsArbitraryLoads</key>
                <true/>
            </dict>
        </config-file>

        <config-file target="*-Info.plist" parent="CFBundleURLTypes">
            <array>
                <dict>
                    <key>CFBundleURLName</key>
                    <string>QQPay</string>
                    <key>CFBundleURLSchemes</key>
                    <array>
                        <string>qwallet$QPAYAPPID</string>
                    </array>
                </dict>
            </array>
        </config-file>

        <source-file src="src/ios/qqpay.m" />
    </platform>
</plugin>